<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsFragment"
    android:background="#F8F8F8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/profile_wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="15dp"
                android:text="Санира Маджикова"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/email_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="fin.mng.system1@gmail.com" />
        </LinearLayout>

        <TextView
            android:id="@+id/label_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Категории/Данные для транзакций"
            android:layout_below="@id/profile_wrap"
            android:layout_marginTop="20dp"
            android:paddingLeft="16dp"/>

        <TextView
            android:id="@+id/new_contrAgent_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contragent"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:padding="16dp"
            android:textSize="14sp"
            android:layout_below="@id/label_categories"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_forward"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="16dp"
            android:layout_below="@id/label_categories"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/new_contrAgent_tv"
            android:background="@color/colorDivider" />

        <TextView
            android:id="@+id/new_account_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Счет"
            android:textColor="@android:color/black"
            android:layout_below="@id/new_contrAgent_tv"
            android:background="@android:color/white"
            android:padding="16dp"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_forward"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/new_contrAgent_tv"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/new_account_tv"
            android:background="@color/colorDivider" />

        <TextView
            android:id="@+id/new_categoryIncome_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Категория дохода"
            android:textColor="@android:color/black"
            android:layout_below="@id/new_account_tv"
            android:background="@android:color/white"
            android:padding="16dp"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_forward"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/new_account_tv"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/new_categoryIncome_tv"
            android:background="@color/colorDivider" />

        <TextView
            android:id="@+id/new_categoryExpense_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Категория расхода"
            android:textColor="@android:color/black"
            android:layout_below="@id/new_categoryIncome_tv"
            android:background="@android:color/white"
            android:padding="16dp"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_forward"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/new_categoryIncome_tv"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/new_categoryExpense_tv"
            android:background="@color/colorDivider" />

        <TextView
            android:id="@+id/new_project_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Проект"
            android:textColor="@android:color/black"
            android:layout_below="@id/new_categoryExpense_tv"
            android:background="@android:color/white"
            android:padding="16dp"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_forward"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/new_categoryExpense_tv"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="16dp"/>
    </RelativeLayout>
</ScrollView>